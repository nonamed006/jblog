	<insert id="insert" parameterType="postvo" >
		<![CDATA[
		insert into post values(null, #{title }, #{contents }, now(), #{category_no}, #{user_id})
		]]>
	</insert>

	<!-- <delete id="delete" parameterType="guestbookvo">
